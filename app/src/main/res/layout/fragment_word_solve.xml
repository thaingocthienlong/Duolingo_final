<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.WordSolveFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/practicebkg"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Word Solve"
            android:textSize="40sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvWSScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score: Points"
            android:textSize="18sp"
            android:background="@color/lavender"
            android:layout_below="@id/tvHeader"
            android:layout_centerHorizontal="true"
            android:padding="8dp"
            android:layout_marginTop="50dp" />

        <LinearLayout
            android:id="@+id/llSolveWord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_border"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal|center_vertical">

            <TextView
                android:id="@+id/tvTranslation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Word"
                android:layout_gravity="center_horizontal"
                android:textSize="30sp"
                android:layout_marginTop="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etEnglishWord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Word"
                android:inputType="text"
                android:textSize="20sp"
                android:background="@drawable/search_bkg"
                android:paddingVertical="10dp"
                android:paddingHorizontal="14dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="12dp" />

            <Button
                android:id="@+id/btnCheck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Check"
                android:layout_gravity="center_horizontal"
                android:paddingVertical="10dp"
                android:paddingHorizontal="14dp"

                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="12dp" />


        </LinearLayout>

        <Button
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="Next"
            android:layout_below="@id/llSolveWord"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp" />

    </RelativeLayout>


</FrameLayout>